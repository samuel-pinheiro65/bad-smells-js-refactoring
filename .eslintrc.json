{
"env": {
"es2021": true,
"node": true,
"jest": true
},
"extends": [
"eslint:recommended",
"plugin:sonarjs/recommended"
],
"parserOptions": {
"ecmaVersion": "latest",
"sourceType": "module"
},
"plugins": [
"sonarjs"
],
"rules": {
// O plugin "sonarjs/recommended" já ativa regras cruciais
// como complexidade cognitiva e duplicação.
"sonarjs/cognitive-complexity": ["error", 15],
"sonarjs/no-identical-functions": "error"
}
}